  <script>
    function success2() {
      if(document.getElementById("username").value==="") { 
        document.getElementById('submit-btn').disabled = true; 
        } else { 
        document.getElementById('submit-btn').disabled = false;
      }
    }
    
  </script>

  <nav>
        <div class="top-bar">
            <a href="/" class="title">
                TSF Bank
                </a>
    
