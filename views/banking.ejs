  <h4 class="heading">
        Enter Any of the username or click any account from the below table-
  </h4>

  <!-- Big Button -->
  <div class="big-button">
      <form action="/pay" method="POST">
        <input type="search" name="username" onkeyup="success2()" id="username" maxlength="100" size="50" placeholder="Enter username..." required>
        <input type="submit" class="btn btn-primary btn-lg" id="submit-btn" value="Submit" disabled>
      </form>
  </div>

  <br> <hr> <br>
  <h1 class="heading">
     *** ALL CUSTOMER DETAILS ***
  </h1>

  <!-- table  -->
  <div class="container">
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="table-danger">
                        <th scope="col">Sl. No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">username</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Bank Balance(in $)</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% customers.forEach(function(customer,i){ %>
                        <tr class="table-light">
                            <td scope="row"> <%= i+1 %> </td>
                            <td> <a href="/pay/<%= customer.username %>"><%= customer.name %></a></td>
                            <td> <%= customer.username %> </td>
                            <td> <%= customer.email %> </td>
                            <td> <%= customer.balance.toFixed(2)%> </td>
                        </tr> 
                      <% }); %>
                </tbody>
            

            </table>
        </div>
  </div>

